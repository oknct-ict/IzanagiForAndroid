<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_default"
    >
	<!-- ファイル画像 -->
    <ImageView
	    android:id="@+id/listlayout_listImage"
	    android:padding="10dp"
		android:layout_width="80dp"
	    android:layout_height="80dp"	    
	    android:src="@drawable/documents"
	  />
    <RelativeLayout
        android:id="@+id/listlayout_LayoutRight"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="vertical">   

    <!-- ファイル名 -->
	<TextView 
  		android:id="@+id/listlayout_textview1"
  		android:layout_width="wrap_content" 
  		android:layout_height="wrap_content"
  		android:layout_alignParentTop="true"
  		android:layout_alignParentLeft="true"
  		android:textSize="25sp"
  		android:paddingTop="5dp"
  		android:paddingRight="3dp"
  		android:paddingBottom="3dp"
  		android:paddingLeft="5dp"
  		
  		android:text="@string/hello_world" 
  		/>
	<!-- 日付 -->
	<TextView 
  		android:id="@+id/listlayout_textview2"
  		android:layout_width="wrap_content" 
  		android:layout_height="wrap_content"
  		android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
  		android:textSize="12sp"
  		android:paddingTop="3dp"
  		android:paddingRight="15dp"
  		android:paddingBottom="3dp"
  		android:paddingLeft="3dp"
  		android:text="@string/listlayout_date" 
  		android:layout_gravity="right" 	/>
	</RelativeLayout>
</LinearLayout>
